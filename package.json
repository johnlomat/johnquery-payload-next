{
  "name": "johnquery-payload-next",
  "version": "2.0.0",
  "description": "Portfolio with Payload CMS 3.0 and Next.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "ci": "payload migrate && pnpm build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@next/third-parties": "15.1.0",
    "@payloadcms/db-postgres": "3.64.0",
    "@payloadcms/next": "3.64.0",
    "@payloadcms/plugin-cloud-storage": "3.64.0",
    "@payloadcms/plugin-seo": "3.64.0",
    "@payloadcms/richtext-lexical": "3.64.0",
    "@payloadcms/ui": "3.64.0",
    "axios": "^1.12.0",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.8.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "flowbite-react": "^0.10.2",
    "graphql": "^16.8.1",
    "next": "15.4.7",
    "nodemailer": "^7.0.7",
    "payload": "3.64.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.7",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.18",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ],
    "overrides": {
      "lexical": "0.35.0"
    }
  },
  "packageManager": "pnpm@10.20.0"
}
